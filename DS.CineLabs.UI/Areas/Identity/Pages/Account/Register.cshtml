@page
@model RegisterModel

@{
    ViewData["Title"] = "Log in";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>Cinelabs - Sign Up</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" href="https://i.imgur.com/Uvn3TSk.png">
    <meta charset="utf-8" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/account.css" />
</head>
<body>
    <section class="vh-100">
        <div class="container-fluid">
            <div class="row">
                <div class="col-sm-6 text-black">
                    <div class="px-5 ms-xl-4">
                        <i class="fas fa-crow fa-2x me-3 pt-5 mt-xl-4" style="color: #709085;"></i>
                        <a href="/"><span class="h1 fw-bold mb-0"><img src="https://i.imgur.com/Mrgxk57.png" /></span></a>
                    </div>
                    <div class="d-flex align-items-center h-custom-2 px-5 ms-xl-4 mt-5 pt-5 pt-xl-0 mt-xl-n5">
                        <form id="account" method="post" style="width: 23rem;">
                            <div asp-validation-summary="All" class="text-danger"></div>
                            <h3 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Sign Up</h3>
                            <div class="form-outline mb-2">
                                <input asp-for="Input.FirstName" type="text" id="form2Example18" class="form-control form-control-lg" />
                                <label class="form-label" for="form2Example18">First Name</label>
                                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                            </div>
                            <div class="form-outline mb-2">
                                <input asp-for="Input.LastName" type="text" id="form2Example18" class="form-control form-control-lg" />
                                <label class="form-label" for="form2Example18">Last Name</label>
                                <span asp-validation-for="Input.LastName" class="text-danger"></span>
                            </div>
                            <div class="form-outline mb-2">
                                <input asp-for="Input.Email" type="email" id="form2Example18" class="form-control form-control-lg" />
                                <label class="form-label" for="form2Example18">Email address</label>
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>
                            <div class="form-outline mb-2">
                                <input asp-for="Input.Password" type="password" id="form2Example28" class="form-control form-control-lg" />
                                <label class="form-label" for="form2Example28">Password</label>
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>
                            <div class="form-outline mb-2">
                                <input asp-for="Input.ConfirmPassword" type="password" id="form2Example28" class="form-control form-control-lg" />
                                <label class="form-label" for="form2Example28">Confirm Password</label>
                                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                            </div>
                            <div class="pt-1 mb-3">
                                <button class="btn btn-info btn-lg btn-block" type="submit">Sign Up</button>
                            </div>
                            <p class="small mb-3 pb-lg-2"><a class="text-muted" href="">Forgot password?</a></p>
                            <p>Already have an account? <a href="/Identity/Account/Login" class="link-info">Sign in</a></p>
                        </form>
                    </div>
                </div>
                <div class="col-sm-6 px-0 d-none d-sm-block">
                    <img src="https://images.cdn4.stockunlimited.net/preview1300/cinema-background-with-movie-objects_1823382.jpg" alt="Login image" class="w-100 vh-100" style="object-fit: cover; object-position: left;">
                </div>
            </div>
        </div>
    </section>
</body>
</html>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
