@model DS.CineLabs.Common.Models.Home.DetailsViewModel

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title></title>
</head>
<body>
    <div class="container" style="margin-top: 90px; margin-bottom: 50px;">
        <table class="table table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>Movie</th>
                    <th>Description</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>


                    @foreach (var t in ViewBag.Tickets)
                    {  
                                <tr>
                                    <td>@t.Movie.Name</td>
                                    <td>@t.Movie.Description</td>
                                    <td>
                                        <a class="btn btn-danger rounded mr-2" asp-controller="Home" asp-action="WatchMovie" asp-route-Id="@t.Movie.Id">
                                            <i class="fa fa-play" style="color:white;"></i>
                                        </a>
                                    </td>
                                </tr>
                       
                    }
            </tbody>
        </table>
    </div>
</body>
</html>
